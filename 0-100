        document.addEventListener('DOMContentLoaded', () => {
            const container = document.getElementById('card-container');

            // データからカードを生成
            words.forEach(word => {
                // カード要素を作成
                const card = document.createElement('div');
                card.className = 'bg-white rounded-lg shadow-md p-4 transition duration-200 hover:shadow-lg cursor-pointer';

                // カードの内容をHTMLで作成
                card.innerHTML = `
                    <div class="flex items-start gap-3">
                        <span class="text-base font-bold text-blue-600 w-8 text-right">${word.num}.</span>
                        <div class="flex-1">
                            <p class="text-lg font-medium text-gray-900">${word.en}</p>
                            <p class="text-md text-gray-600 mt-2">
                                ${word.ja_pre || ''}
                                <span class="answer">${word.ja_ans}</span>
                                ${word.ja_post || ''}
                            </p>
                        </div>
                    </div>
                `;

                // カードにクリックイベントを追加
                card.addEventListener('click', () => {
                    // カード内の .answer 要素を探す
                    const answerSpan = card.querySelector('.answer');
                    // .visible クラスをトグル（付け外し）する
                    answerSpan.classList.toggle('visible');
                });

                // コンテナにカードを追加
                container.appendChild(card);
            });
        });
    </script>

